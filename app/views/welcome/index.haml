- if current_user
    Welcome
    = current_user.email
-else
    .jumbotron
        %h1 Welcome
        .lead Photo App
    .row.center
        .col-md-4.col-md-offset-3
            %h4 Free Plan
            %ul
                %li Great stuff
                %li free to use
            = link_to 'Sign Up?', new_user_registration_path, class: 'btn btn-lg btn-success'
        .col-md-4
            %h4 Paid Plan
            %ul
                %li Great stuff
                %li free to use
                %li also costs more!
            = link_to 'Sign Up?', new_user_registration_path, class: 'btn btn-lg btn-success'
